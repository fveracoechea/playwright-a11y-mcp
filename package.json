{
  "name": "playwright-a11y-mpc",
  "version": "0.0.1",
  "type": "module",
  "files": [
    "build"
  ],
  "bin": "./build/cli.mjs",
  "keywords": [
    "accessibility",
    "a11y",
    "audit",
    "mcp",
    "axe-core"
  ],
  "scripts": {
    "postinstall": "bun2nix -o nix/bun.nix",
    "dev": "bun run --hot src/index.ts",
    "build": "bunx tsdown --no-config -d build src/bin.ts",
    "prettier:check": "prettier '**/*.{js,ts,jsx,tsx,json}' --check",
    "prettier:write": "prettier '**/*.{js,ts,jsx,tsx,json}' --write"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@hono/mcp": "^0.1.5",
    "@hono/node-server": "^1.19.6",
    "@hono/zod-validator": "^0.7.4",
    "@modelcontextprotocol/sdk": "^1.21.0",
    "hono": "^4.10.4",
    "playwright": "1.54.1",
    "prettier": "^3.6.2",
    "zod": "3.x"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/bun": "latest",
    "tsx": "^4.20.6"
  }
}
