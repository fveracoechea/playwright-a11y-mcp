# Authentication
AUTH_COOKIE_NAME=your_cookie_name
AUTH_COOKIE_VALUE=your_jwt_token

# Storage Configuration
# Options: 'local' or 's3'
STORAGE_TYPE=local

# ===================================
# Local Storage Configuration
# ===================================
# Path relative to project root where screenshots will be saved
PUBLIC_SCREENSHOTS_PATH=public/screenshots

# Base URL for generating full screenshot URLs (optional)
# If not provided, relative paths like /screenshots/filename.jpeg will be used
BASE_URL=http://localhost:8080

# ===================================
# S3 Storage Configuration
# (Required only when STORAGE_TYPE=s3)
# ===================================
# S3 Bucket name
S3_BUCKET=your-bucket-name

# AWS Region (e.g., us-east-1, eu-west-1)
S3_REGION=us-east-1

# AWS Credentials
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key

# S3 Base URL (optional)
# If not provided, URLs will be constructed as:
# https://{bucket}.s3.{region}.amazonaws.com/{key}
# Use this if you have a custom domain or CloudFront distribution
S3_BASE_URL=https://cdn.example.com
